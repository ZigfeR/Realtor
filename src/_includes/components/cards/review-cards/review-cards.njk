{% macro reviewCard(property) %}
    <div class="review-card">
        <div class="review-card__header">
          <div class="avatar-wrapper">
            <img src="{{ property.image }}" class="avatar" alt="{{ property.name }}" />
          </div>
          <img src="{{ property.image }}" class="avatar-copy" alt="{{ property.name }}" />
          <div class="stars" data-stars="{{ property.stars }}"></div>
        </div>
        <div class="review-card__body">
          <div class="review-card__body-top">
            <p class="persona-name">{{ property.name }}</p>
            <p class="persona-comment">
              {{ property.comment }}
            </p>
          </div>
          <div class="review-card__body-bottom">
            <p class="review-date">{{ property.date }}</p>
            <span class="review-read-more">Read More</span>
          </div>
        </div>
    </div>
{% endmacro %}