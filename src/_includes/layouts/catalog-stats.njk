{# Блок "Average Selling Price" (по макету Pixso) #}
<section class="catalog-stats-section" aria-label="Average Selling Price">
  <div class="container">
    <div class="catalog-stats">
      <div class="catalog-stats__header">
        <h2 class="catalog-stats__title">
          <span class="catalog-stats__title-accent">Average</span> Selling Price
        </h2>

        <p class="catalog-stats__subtitle">
          Want to calculate the exact cost with real numbers?
          <a class="catalog-stats__link" href="#">Contact us</a>
        </p>
      </div>

      <div class="catalog-stats__body">
        <div class="catalog-stats__bar" aria-hidden="true"></div>

        <div class="catalog-stats__content">
          <div class="catalog-stats__illustration" aria-hidden="true">
            <img
              src="/assets/images/catalog/average-selling-price.png"
              alt=""
              width="294"
              height="232"
              loading="lazy"
              decoding="async"
            >
          </div>

          <ul class="catalog-stats__cards" aria-label="Average selling price by rooms">
            <li class="catalog-stats-card catalog-stats-card--down">
              <div class="catalog-stats-card__main">
                <div
                  class="catalog-stats-card__price"
                  data-count-to="34.1"
                  data-decimals="1"
                  data-prefix="$ "
                  data-suffix="K"
                >$ 34.1K</div>
                <div class="catalog-stats-card__type">1-room flat</div>
              </div>

              <div class="catalog-stats-card__side">
                <div class="catalog-stats-card__badge" aria-label="-12 percent per year">
                  <svg class="catalog-stats-card__badge-icon" width="12" height="16" viewBox="0 0 12 16" fill="none" aria-hidden="true">
                    <path d="M6 2V14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M2 10.5L6 14.5L10 10.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span
                    class="catalog-stats-card__badge-value"
                    data-count-to="-12"
                    data-decimals="0"
                    data-suffix="%"
                  >-12%</span>
                </div>
                <div class="catalog-stats-card__period">per year</div>
              </div>
            </li>

            <li class="catalog-stats-card catalog-stats-card--up">
              <div class="catalog-stats-card__main">
                <div
                  class="catalog-stats-card__price"
                  data-count-to="38.4"
                  data-decimals="1"
                  data-prefix="$ "
                  data-suffix="K"
                >$ 38.4K</div>
                <div class="catalog-stats-card__type">2-room flat</div>
              </div>

              <div class="catalog-stats-card__side">
                <div class="catalog-stats-card__badge" aria-label="+4 percent per year">
                  <svg class="catalog-stats-card__badge-icon" width="12" height="16" viewBox="0 0 12 16" fill="none" aria-hidden="true">
                    <path d="M6 14V2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M2 5.5L6 1.5L10 5.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span
                    class="catalog-stats-card__badge-value"
                    data-count-to="4"
                    data-decimals="0"
                    data-prefix="+"
                    data-suffix="%"
                  >+4%</span>
                </div>
                <div class="catalog-stats-card__period">per year</div>
              </div>
            </li>

            <li class="catalog-stats-card catalog-stats-card--flat">
              <div class="catalog-stats-card__main">
                <div
                  class="catalog-stats-card__price"
                  data-count-to="40.3"
                  data-decimals="1"
                  data-prefix="$ "
                  data-suffix="K"
                >$ 40.3K</div>
                <div class="catalog-stats-card__type">3-room flat</div>
              </div>

              <div class="catalog-stats-card__side">
                <div class="catalog-stats-card__badge" aria-label="0 percent per year">
                  <span
                    class="catalog-stats-card__badge-value"
                    data-count-to="0"
                    data-decimals="0"
                    data-suffix="%"
                  >0%</span>
                </div>
                <div class="catalog-stats-card__period">per year</div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
