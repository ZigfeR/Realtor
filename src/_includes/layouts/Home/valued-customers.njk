{% macro customers(property) %}
    <section class="valued-customers">
        <div class="container container-valued-customers">
            <div class="valued-customers-header">
                <div class="valued-customers-header-top">
                    <h2 class="global-h">
                        Our Valued
                        <span class="global-h-color">
                        Customers
                        </span>
                    </h2>
                    <a href="#">View All</a>
                </div>
                <p class="valued-customers-header-p" data-max-chars="130">
                    We have had the honor of working with a variety of clients 
                    from various industries. Here are some of the clients we 
                    have had the pleasure of serving:
                </p>
                <div class="valued-customers-header-bottom">
                    {% for images in property.logo %}
                         {% include images.image %}
                    {% endfor %}
                    {# Кнопка смотреть все  #}
                    <div class="valued-customers__bottom-btn">
                        <button type="button" class="btn btn-primary property__view-all-btn">
                            <span class="find-text">View All</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endmacro %}
 
 