{% macro partners(property) %}
    <section class="partners">
        <div class="container container-partners">
            <div class="partners-header">
                <div class="partners-header-top">
                    <h2 class="global-h">
                        Our 
                        <span class="global-h-color">
                        Partners
                        </span>
                    </h2>
                    <a href="#">View All</a>
                </div>
                <div class="partners-header-bottom">
                    {% for images in property.logo %}
                        {% include images.image %}
                    {% endfor %}
                </div>
                {# Кнопка смотреть все  #}
                <div class="partner__bottom-btn">
                    <button type="button" class="btn btn-primary property__view-all-btn">
                        <span class="find-text">View All</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="partners-body">
            <div class="container container-partners-body">
                {% for images in property.images %}
                    <a href="#" class="partners-body-box">
                        <img src="{{ images.image }}" 
                        alt="{{ images.imageName }}" class="partners__image {{ images.imageClass }}">
                        <p>
                            {% if images.markSVG is defined and images.markSVG %}
                                {% include images.markSVG %}
                            {% endif %}
                            {{ images.text }}
                        </p>
                    </a>
                {% endfor %}
            </div>
        </div>
    </section>
{% endmacro %}
 
 